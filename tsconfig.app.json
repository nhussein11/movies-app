/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": [],
    "paths": {
      "@shared/*": ["src/app/shared/*"],
      "@state/*": ["src/app/state/*"],
      "@models/*": ["src/app/models/*"],
      "@movies/*": ["src/app/movies/*"],
      "@series/*": ["src/app/series/*"],
      "@home/*": ["src/app/home/*"],
    }
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ]
}
